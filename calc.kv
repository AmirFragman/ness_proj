<CalcLayout>
  BoxLayout:
    orientation: "vertical"
    size: root.width, root.height

    TextInput:
      id: calc_input
      text: "0"
      halign: "right"
      font_size: 48
      size_hint: (1, 0.15)


    GridLayout:
      cols: 4
      rows: 4

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "7"
        on_press: root.button_input(7)

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "8"
        on_press: root.button_input(8)

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "9"
        on_press: root.button_input(9)

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "/"
        on_press: root.math_sign("/")

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "4"
        on_press: root.button_input(4)

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "5"
        on_press: root.button_input(5)

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "6"
        on_press: root.button_input(6)

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "*"
        on_press: root.math_sign("*")

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "1"
        on_press: root.button_input(1)

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "2"
        on_press: root.button_input(2)

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "3"
        on_press: root.button_input(3)

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "-"
        on_press: root.math_sign("-")

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "0"
        on_press: root.button_input(0)

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "C"
        on_press: root.clear()

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "="
        on_press: root.result()

      Button: 
        size_hint: (0.2, 0.2)
        font_size: 32
        text: "+"
        on_press: root.math_sign("+")